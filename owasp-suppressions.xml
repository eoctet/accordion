<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    
    <!-- Suppress false positives for common libraries -->
    
    <!-- Suppress Logback false positives -->
    <suppress>
        <notes><![CDATA[
        Logback false positive - CVE not applicable to our usage
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/ch\.qos\.logback/logback\-.*@.*$</packageUrl>
        <cve>CVE-2017-5929</cve>
    </suppress>
    
    <!-- Suppress Jackson false positives for older CVEs -->
    <suppress>
        <notes><![CDATA[
        Jackson false positive - using latest version with fixes
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.fasterxml\.jackson\.core/jackson\-.*@.*$</packageUrl>
        <cve>CVE-2018-7489</cve>
    </suppress>
    
    <!-- Suppress Commons Email false positives -->
    <suppress>
        <notes><![CDATA[
        Commons Email false positive - not using vulnerable features
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.apache\.commons/commons\-email@.*$</packageUrl>
        <cve>CVE-2018-1294</cve>
    </suppress>
    
    <!-- Suppress test-only dependencies -->
    <suppress>
        <notes><![CDATA[
        Test dependency - not included in production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.junit\.jupiter/.*@.*$</packageUrl>
    </suppress>
    
    <suppress>
        <notes><![CDATA[
        Test dependency - not included in production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.mockito/.*@.*$</packageUrl>
    </suppress>
    
    <suppress>
        <notes><![CDATA[
        Test dependency - not included in production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.assertj/.*@.*$</packageUrl>
    </suppress>
    
    <!-- Suppress build-time only dependencies -->
    <suppress>
        <notes><![CDATA[
        Build-time dependency - not included in runtime
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.projectlombok/lombok@.*$</packageUrl>
    </suppress>
    
    <!-- Suppress low severity issues for stable libraries -->
    <suppress>
        <notes><![CDATA[
        Low severity issue in stable library
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.google\.guava/guava@.*$</packageUrl>
        <cvssBelow>4.0</cvssBelow>
    </suppress>
    
    <!-- Suppress issues in transitive dependencies that are not exploitable -->
    <suppress>
        <notes><![CDATA[
        Transitive dependency issue not exploitable in our context
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.apache\.commons/commons\-lang3@.*$</packageUrl>
        <cvssBelow>5.0</cvssBelow>
    </suppress>
    
</suppressions>